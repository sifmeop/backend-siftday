// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pizza {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String  @unique
  image       String
  description String
  price       Int
  note        String?
}

model Drink {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String  @unique
  image       String
  description String
  price       Int
  note        String?
}

model Sauce {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String  @unique
  image       String
  description String
  price       Int
  note        String?
}

model Promo {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}
