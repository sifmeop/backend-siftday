// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pizza {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String @unique
  image       String
  ingredients String
  price       Int
}

model Drink {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String @unique
  image String
  price Int
}

model Sauce {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String @unique
  image String
  price Int
}
